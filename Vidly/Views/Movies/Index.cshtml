@model System.Collections.Generic.List<Vidly.Models.Movie>

@{
    ViewBag.Title = "Movies List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies List</h2>
@if (!Model.Any())
{
   <p>No Movies to show.....</p>
}
else
{
    <button class="btn btn-primary btn-lg" style="margin-bottom: 15px" id="newMovieButton">Add New Customer</button>
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
            </tr>
        </thead>

        <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@Html.ActionLink(movie.Name, "Details", "Movies", new { id = movie.Id}, null)</td>              
            </tr>
        }
        </tbody>
    </table>
}


@section scripts
{
    <script type="text/javascript">
        $('#newMovieButton').click(function () {
            document.location = '@Url.Action("New","Customers")';
        });
    </script>
}
