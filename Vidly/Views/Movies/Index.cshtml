@model System.Collections.Generic.List<Vidly.Models.Movie>

@{
    ViewBag.Title = "Movies List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies List</h2>
@if (!Model.Any())
{
    <p>No Movies to show.....</p>
}
else
{
    <button class="btn btn-primary btn-lg" style="margin-bottom: 15px" id="newMovieButton"> <i class="fa fa-plus"></i> Add New Movie</button>
    <table id="movies" class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Genre</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @*@foreach (var movie in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(movie.Name, "Edit", "Movies", new { id = movie.Id }, null)</td>
                    </tr>
                }*@
        </tbody>
    </table>
}
@section scripts
{
    <script src="~/Scripts/customJs/movieDataTable.js"></script>
    <script src="~/Scripts/customJs/crudMovie.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#newMovieButton').click(function () {
                document.location = '@Url.Action("New","Movies")';
            });
       });
    </script>
}


